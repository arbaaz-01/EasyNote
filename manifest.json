{
  "manifest_version": 3,
  "name": "Easy Note",
  "version": "1.0.0",
  "description": "A note-taking extension with rich text formatting, local storage, and organization features.",
  "permissions": ["storage", "activeTab", "contextMenus", "commands", "notifications"],
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Easy Note",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "commands": {
    "open-quick-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      },
      "description": "Open quick note"
    },
    "search-notes": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Search notes"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
